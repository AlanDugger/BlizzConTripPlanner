<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
	
<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TodoDialogController" prefWidth="600">	
	<content>
		<GridPane vgap="10" hgap="10">
			<Label text="Short Description: " GridPane.rowIndex="0" GridPane.columnIndex="0" />
			<TextField fx:id="shortDescr" GridPane.rowIndex="0" GridPane.columnIndex="1" />
			<Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
			<TextArea fx:id="detailsArea" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="400" prefHeight="100"
						wrapText="true" />
			<Label text="Deadline: " GridPane.rowIndex="2" GridPane.columnIndex="0" />
			<DatePicker fx:id="deadlinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />
		</GridPane>
	</content>
</DialogPane>